<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trItemAdminPaymentDetailWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48"
    android:background="#FFFFFF"
    android:clickable="true">

    <TextView
        android:id="@+id/tvItemAdminPaymentDetailWhiteName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_weight="5"
        android:lineHeight="@dimen/size_20"
        android:paddingVertical="@dimen/text_14"
        android:text="Pengembangan I/II"
        android:textColor="#000000"
        android:textSize="@dimen/text_14" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lineHeight="@dimen/size_20"
        android:paddingVertical="@dimen/text_14"
        android:text="Rp."
        android:textColor="#212121"
        android:textFontWeight="500"
        android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tvItemAdminPaymentDetailWhiteFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:layout_marginRight="@dimen/size_18"
            android:lineHeight="@dimen/size_20"
            android:paddingVertical="@dimen/text_14"
            android:text="880.000"
            android:textColor="#212121"
            android:textFontWeight="500"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/ivItemAdminPaymentDetailWhiteDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close"
            android:visibility="gone"/>
</TableRow>