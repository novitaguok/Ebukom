<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clItemAdminInfoSent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_16">

    <CheckBox
        android:id="@+id/cbItemAdminInfoSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/colored_checkbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvItemAdminInfoSentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:lineHeight="@dimen/size_24"
        android:text="Info Biaya Pendidikan 14 Maret 2020"
        android:textColor="#212121"
        android:textSize="@dimen/text_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemAdminInfoSentDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="@dimen/size_24"
        android:text="Pramuka, Basket"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/text_12"
        app:layout_constraintLeft_toLeftOf="@+id/tvItemAdminInfoSentTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvItemAdminInfoSentTitle" />

    <TextView
        android:id="@+id/tvItemAdminInfoSentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="@dimen/size_24"
        android:text="Dikirim pada 20.00 - 14 Maret 2020"
        android:textColor="@color/colorSuperDarkBlue"
        android:textSize="@dimen/text_12"
        app:layout_constraintLeft_toLeftOf="@+id/tvItemAdminInfoSentDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvItemAdminInfoSentDetail" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_12"
        app:layout_constraintTop_toBottomOf="@+id/tvItemAdminInfoSentDate"
        android:background="#EEEEEE"/>

</androidx.constraintlayout.widget.ConstraintLayout>