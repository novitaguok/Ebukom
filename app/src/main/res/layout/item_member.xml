<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_72">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivItemMember"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvItemMemberTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"
        android:text="Eni Trikuswanti"
        app:layout_constraintLeft_toRightOf="@+id/ivItemMember"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_14"
        android:lineHeight="@dimen/size_24"
        android:textColor="#212121"/>

    <TextView
        android:id="@+id/tvItemMemberChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:text="Julian Akbar"
        android:textSize="@dimen/text_14"
        android:lineHeight="@dimen/size_20"
        android:textColor="#666666"
        app:layout_constraintLeft_toRightOf="@+id/ivItemMember"
        app:layout_constraintTop_toBottomOf="@+id/tvItemMemberTeacher" />

    <ImageView
        android:id="@+id/ivItemMemberWhatsApp"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_28"
        android:layout_marginRight="@dimen/size_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_whatsapp"
        app:layout_constraintRight_toLeftOf="@+id/ivItemMemberPhone"/>

    <ImageView
        android:id="@+id/ivItemMemberPhone"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_28"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_call_blue"/>

    <View
        android:id="@+id/vItemMember"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="@dimen/size_16"
        app:layout_constraintLeft_toLeftOf="@+id/tvItemMemberChild"
        app:layout_constraintTop_toBottomOf="@+id/tvItemMemberChild"/>

</androidx.constraintlayout.widget.ConstraintLayout>