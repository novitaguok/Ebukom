<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tvEditInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_edit_red"
        android:drawablePadding="@dimen/size_28"
        android:text="Edit Informasi"
        android:textColor="#666666"
        android:textSize="@dimen/text_16" />


    <TextView
        android:id="@+id/tvDeleteInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_delete_red"
        android:drawablePadding="@dimen/size_28"
        android:text="Hapus Informasi"
        android:textColor="#666666"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tvCancelInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56"
        android:paddingHorizontal="68dp"
        android:gravity="center_vertical"
        android:text="Batalkan"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/text_16"/>

</LinearLayout>