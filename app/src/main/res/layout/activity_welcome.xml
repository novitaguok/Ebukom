<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".arch.ui.welcome.WelcomeActivity"
    android:background="@color/colorSuperDarkBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clWelcomeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/size_32"
        android:background="#464166">

        <TextView
            android:id="@+id/tvWelcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/size_64"
            android:text="@string/welcome_text"
            android:textColor="#D6CF2F"
            android:textSize="@dimen/text_20"
            android:textFontWeight="700"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcomeText"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/size_12"
            android:text="Komunikasi sekolah jadi semakin mudah"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_14"
            android:textFontWeight="500"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnWelcomeRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/size_48"
        app:layout_constraintTop_toBottomOf="@+id/clWelcomeHeader"
        android:background="@drawable/btn_white_rectangle_8dp"
        android:text="DAFTAR"/>

    <TextView
        android:id="@+id/tvWelcomeHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginTop="@dimen/size_24"
        app:layout_constraintTop_toBottomOf="@+id/btnWelcomeRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Sudah punya akun?"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_14"
        android:textFontWeight="500"/>

    <Button
        android:id="@+id/btnWelcomeLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/size_14"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeHaveAccount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_transparent_rectangle_white_stroke_8dp"
        android:text="LOGIN"
        android:textSize="@dimen/text_14"
        android:textFontWeight="500"
        android:textColor="@color/colorWhite"/>

    <ImageView
        android:id="@+id/ivWelcomeLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_logo_cendekia"/>

</androidx.constraintlayout.widget.ConstraintLayout>