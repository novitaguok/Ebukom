<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginHorizontal="@dimen/size_8"
    app:cardCornerRadius="@dimen/size_8"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItemClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivItemClass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_class_krypton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibItemClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginRight="@dimen/size_8"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_more_vertical"
            app:layout_constraintRight_toRightOf="@+id/ivItemClass"
            app:layout_constraintTop_toTopOf="@+id/ivItemClass" />

        <TextView
            android:id="@+id/tvItemClassGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_24"
            android:lineHeight="@dimen/size_20"
            android:text="Kelas 1"
            android:textColor="#005C39"
            android:textFontWeight="500"
            android:textSize="@dimen/text_16"
            app:layout_constraintBottom_toTopOf="@+id/tvItemClassName"
            app:layout_constraintLeft_toLeftOf="@+id/tvItemClassName" />

        <TextView
            android:id="@+id/tvItemClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:text="Krypton"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_28"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivItemClass"
            app:layout_constraintLeft_toLeftOf="@+id/ivItemClass"
            app:layout_constraintTop_toTopOf="@id/ivItemClass" />

        <TextView
            android:id="@+id/tvItemClassTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:layout_marginBottom="@dimen/size_24"
            android:lineHeight="@dimen/size_16"
            android:text="Ratna Hendrawati"
            android:textColor="#005C39"
            android:textFontWeight="500"
            android:textSize="@dimen/text_14"
            app:layout_constraintLeft_toLeftOf="@+id/tvItemClassName"
            app:layout_constraintTop_toBottomOf="@+id/tvItemClassName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>